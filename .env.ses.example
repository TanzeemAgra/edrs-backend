# EDRS AWS SES Configuration for Contact Form
# Add these to your .env.local file

# AWS SES Email Configuration
USE_AWS_SES=true
AWS_SES_REGION_NAME=us-east-1
DEFAULT_FROM_EMAIL=EDRS Support <noreply@rejlers.ae>

# Contact Form Recipients (Mohammed Agra)
CONTACT_EMAIL_RECIPIENTS=mohammed.agra@rejlers.ae

# Note: AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY are already configured
# These will be used for both S3 and SES services

# Alternative SMTP Configuration (if not using SES)
# USE_AWS_SES=false
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password