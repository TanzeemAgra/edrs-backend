# EDRS Environment Variables Template
# Copy this file to create your environment configuration

# =================================================================
# CORE APPLICATION SETTINGS
# =================================================================

# Application Environment
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ENVIRONMENT=development

# Host Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# PostgreSQL (Primary Database)
POSTGRES_DB=edrs_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your-postgres-password@localhost:5432/edrs_db

# MongoDB (Secondary Database)
MONGO_DB_NAME=edrs_mongo
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USERNAME=your-mongo-user
MONGO_PASSWORD=your-mongo-password
MONGODB_URI=mongodb://your-mongo-user:your-mongo-password@localhost:27017/edrs_mongo

# Redis (Caching)
REDIS_URL=redis://localhost:6379/0

# =================================================================
# SECURITY SETTINGS
# =================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =================================================================
# DEPLOYMENT CONFIGURATION
# =================================================================

# Railway (Backend Production)
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_NAME=edrs-backend

# Vercel (Frontend Production)
NEXT_PUBLIC_API_URL=https://your-railway-app.railway.app/api
VERCEL_ENV=production

# =================================================================
# THIRD-PARTY SERVICES (Optional)
# =================================================================

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# OpenAI API (Optional - Remove if not using AI features)
# IMPORTANT: Keep this secure and never commit to version control
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# AWS S3 Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# =================================================================
# DEVELOPMENT VS PRODUCTION NOTES
# =================================================================

# For LOCAL DEVELOPMENT:
# 1. Copy this file to .env.local
# 2. Use docker-compose.local.yml for full local environment
# 3. See test/ folder for isolated testing environment

# For PRODUCTION:
# 1. Set these variables in Railway/Vercel dashboard
# 2. Never use default values in production
# 3. Generate strong passwords and secrets
# 4. Enable proper CORS and security settings